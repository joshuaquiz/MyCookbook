<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCookbook.App.Controls.CachedImage"
             x:Name="Root">
    <Grid>
        <!-- Placeholder (shown while loading) -->
        <BoxView x:Name="PlaceholderBox"
                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                 IsVisible="{Binding Source={x:Reference Root}, Path=IsLoading}" />
        
        <!-- Actual Image -->
        <Image x:Name="CachedImageControl"
               Source="{Binding Source={x:Reference Root}, Path=CachedSource}"
               Aspect="{Binding Source={x:Reference Root}, Path=Aspect}"
               IsVisible="{Binding Source={x:Reference Root}, Path=IsImageLoaded}" />
    </Grid>
</ContentView>

