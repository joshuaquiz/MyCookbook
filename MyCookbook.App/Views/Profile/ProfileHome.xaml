<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyCookbook.App.Views.Profile.ProfileHome"
    xmlns:views="using:MyCookbook.App.Views"
    xmlns:viewModels="using:MyCookbook.App.ViewModels"
    xmlns:recipeSummaryList="clr-namespace:MyCookbook.App.Components.RecipeSummaryList"
    x:DataType="viewModels:ProfileViewModel"
    x:Name="Root"
    Title="{Binding Title}"
    Shell.NavBarIsVisible="True"
    Shell.PresentationMode="Animated">
    <ScrollView
        VerticalScrollBarVisibility="Never"
        HorizontalScrollBarVisibility="Never">
        <VerticalStackLayout>
            <ActivityIndicator
                IsVisible="{Binding IsBusy}"
                IsEnabled="{Binding IsBusy}" />
            <Image
                IsVisible="{Binding IsNotBusy}"
                HeightRequest="{StaticResource HeightHero}"
                Source="{Binding UserProfile.BackgroundImageUri}"
                Aspect="AspectFill" />
            <Frame
                IsVisible="{Binding IsNotBusy}"
                Margin="0,-75,0,0"
                HeightRequest="{StaticResource HeightXXLarge}"
                WidthRequest="{StaticResource HeightXXLarge}"
                BorderColor="{StaticResource White}"
                HorizontalOptions="Center"
                HasShadow="False"
                CornerRadius="{StaticResource CornerRadiusCircle}"
                Padding="0"
                IsClippedToBounds="True">
                <Image
                    Source="{Binding UserProfile.ProfileImageUri}"
                    Aspect="AspectFill" />
            </Frame>
            <Label
                IsVisible="{Binding IsNotBusy}"
                FontAttributes="Bold"
                TextColor="{AppThemeBinding Light={StaticResource ProfileAccent}, Dark={StaticResource White}}"
                HorizontalTextAlignment="Center"
                Margin="0,{StaticResource SpacingXLarge},0,0"
                FontSize="{StaticResource FontSizeHeadingLarge}">
                <Label.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="UserProfile.FirstName" />
                        <Binding Path="UserProfile.LastName" />
                    </MultiBinding>
                </Label.Text>
            </Label>
            <Grid
                IsVisible="{Binding IsNotBusy}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Margin="0,{StaticResource SpacingXLarge},0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{StaticResource SpacingMedium}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{StaticResource SpacingSmall}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{StaticResource SpacingSmall}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{StaticResource SpacingSmall}" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Source="location"
                    WidthRequest="{StaticResource IconSizeSmall}"
                    HeightRequest="{StaticResource IconSizeSmall}"
                    HorizontalOptions="Center" />
                <Label
                    Grid.Column="1"
                    FontSize="{StaticResource FontSizeBodyLarge}">
                    <Label.Text>
                        <MultiBinding StringFormat="{}{0}, {1}">
                            <Binding Path="UserProfile.City" />
                            <Binding Path="UserProfile.Country" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Image
                    Grid.Column="3"
                    Source="calendar"
                    WidthRequest="{StaticResource IconSizeSmall}"
                    HeightRequest="{StaticResource IconSizeSmall}"
                    HorizontalOptions="Center" />
                <Label
                    Grid.Column="5">
                    <Label.Text>
                        <MultiBinding StringFormat="{}Age, {0}">
                            <Binding Path="UserProfile.Age" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Image
                    Grid.Column="7"
                    Source="chef_hat"
                    WidthRequest="{StaticResource IconSizeSmall}"
                    HeightRequest="{StaticResource IconSizeSmall}"
                    HorizontalOptions="Center"
                    IsVisible="{Binding UserProfile.IsPremium}" />
                <Label
                    Grid.Column="9"
                    Text="Premium"
                    IsVisible="{Binding UserProfile.IsPremium}">
                </Label>
            </Grid>
            <Label
                IsVisible="{Binding IsNotBusy}"
                FontAttributes="Bold"
                HorizontalTextAlignment="Start"
                FontSize="{StaticResource FontSizeTitleLarge}">
                <Label.Margin>
                    <Thickness>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS, Android, WinUI, MacCatalyst">20,20,15,10</On>
                        </OnPlatform>
                    </Thickness>
                </Label.Margin>
                <Label.Text>
                    <MultiBinding StringFormat="{}About {0}">
                        <Binding Path="UserProfile.FirstName" />
                    </MultiBinding>
                </Label.Text>
            </Label>
            <Label
                IsVisible="{Binding IsNotBusy}"
                HorizontalTextAlignment="Start"
                FontSize="{StaticResource FontSizeBodyLarge}"
                Text="{Binding UserProfile.Description}">
                <Label.Margin>
                    <Thickness>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS, Android, WinUI, MacCatalyst">20,0,20,0</On>
                        </OnPlatform>
                    </Thickness>
                </Label.Margin>
            </Label>
            <Label
                IsVisible="{Binding IsNotBusy}"
                Text="Recipes"
                FontAttributes="Bold"
                HorizontalTextAlignment="Start"
                FontSize="{StaticResource FontSizeTitleLarge}">
                <Label.Margin>
                    <Thickness>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS, Android, WinUI, MacCatalyst">20,20,20,0</On>
                        </OnPlatform>
                    </Thickness>
                </Label.Margin>
            </Label>
            <recipeSummaryList:RecipeSummaryListControl
                x:Name="RecipeSummaryListControl"
                GetData="{Binding GetData, Source={Reference Root}}" />
        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>