<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="using:MyCookbook.App.Views"
    xmlns:recipeSummaryList="clr-namespace:MyCookbook.App.Components.RecipeSummaryList"
    xmlns:models="clr-namespace:MyCookbook.App.Implementations.Models"
    x:Class="MyCookbook.App.Views.Search.SearchHome"
    x:Name="Root"
    Title="Search"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="ModalAnimated"
    Loaded="OnLoaded"
    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Black}}">
    <VerticalStackLayout>
        <SearchBar
            x:Name="TextSearchBar"
            Placeholder="Start searching"
            Margin="10"
            HorizontalOptions="Fill"
            SearchCommand="{Binding SearchCommand, Source={Reference Root}}"
            SearchCommandParameter="{Binding Text, Source={x:Reference TextSearchBar}}" />
        <CollectionView
            HorizontalScrollBarVisibility="Never"
            HorizontalOptions="Fill"
            Margin="0"
            ItemsSource="{Binding Categories, Source={Reference Root}}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout
                    Orientation="Horizontal"
                    ItemSpacing="15" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate
                    x:DataType="models:SearchCategoryItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="55" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Row="0"
                            Grid.RowSpan="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            CornerRadius="0"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            BackgroundColor="Transparent"
                            Command="{Binding CategorySelectedCommand, Source={Reference Root}}"
                            CommandParameter="{Binding Name}" />
                        <RoundRectangle
                            Grid.Row="0"
                            Grid.RowSpan="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            CornerRadius="8"
                            BackgroundColor="{Binding ColorHex}" />
                        <Image
                            Grid.Row="1"
                            Grid.Column="1"
                            Source="{Binding ImageUrl}"
                            WidthRequest="55"
                            HeightRequest="55"
                            VerticalOptions="Center"
                            HorizontalOptions="Center" />
                        <Label 
                            Grid.Row="2"
                            Grid.Column="1"
                            FontSize="22"
                            FontAttributes="Bold"
                            HorizontalOptions="Fill"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <CollectionView
            HorizontalScrollBarVisibility="Never"
            ItemsLayout="HorizontalList"
            Margin="0,10,0,10"
            HorizontalOptions="Fill"
            HeightRequest="50"
            ItemsSource="{Binding Ingredients, Source={Reference Root}}">
            <CollectionView.ItemTemplate>
                <DataTemplate
                    x:DataType="models:SearchCategoryItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            CornerRadius="0"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            BackgroundColor="Transparent"
                            Command="{Binding IngredientSelectedCommand, Source={Reference Root}}"
                            CommandParameter="{Binding Name}" />
                        <RoundRectangle
                            Grid.Row="0"
                            Grid.RowSpan="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            CornerRadius="5"
                            BackgroundColor="{Binding ColorHex}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalOptions="Fill"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Fill"
                            VerticalTextAlignment="Center"
                            TextColor="White"
                            Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <recipeSummaryList:RecipeSummaryListControl
            x:Name="RecipeSummaryListControl"
            GetData="{Binding GetData, Source={Reference Root}}" />
    </VerticalStackLayout>
</views:BasePage>