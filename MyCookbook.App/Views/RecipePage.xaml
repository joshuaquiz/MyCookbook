<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="using:MyCookbook.App.Views"
    xmlns:viewModels="clr-namespace:MyCookbook.App.ViewModels"
    xmlns:converters="clr-namespace:MyCookbook.App.Converters"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    x:Class="MyCookbook.App.Views.RecipePage"
    x:DataType="viewModels:RecipeViewModel"
    x:Name="Root"
    Shell.NavBarIsVisible="True"
    Shell.PresentationMode="Animated"
    Title="{Binding Name}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Share"
            IconImageSource="share"
            Command="{Binding ShareCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <converters:IngredientToStringConverter x:Key="IngredientToStringConverter" />
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        <DataTemplate
            x:Key="RecipeImageTemplate"
            x:DataType="system:Uri">
            <Image
                Source="{Binding .}"
                Aspect="AspectFill"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />
        </DataTemplate>
        <DataTemplate
            x:Key="RecipeIngredientTemplate"
            x:DataType="viewModels:RecipeIngredientViewModel">
            <VerticalStackLayout>
                <Grid
                    RowDefinitions="50"
                    ColumnDefinitions="*,150">
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalOptions="Fill"
                        VerticalTextAlignment="Center"
                        Padding="20,0,0,0">
                        <Label.Text>
                            <MultiBinding Converter="{StaticResource IngredientToStringConverter}">
                                <Binding Path="." />
                                <Binding 
                                    Path="BindingContext.ServingsMultiplier"
                                    Source="{x:Reference Root}" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Image
                        Grid.Row="0"
                        Grid.Column="2"
                        Source="{Binding ImageUri, TargetNullValue=carrot}"
                        Aspect="AspectFill"
                        HeightRequest="50"
                        WidthRequest="150" />
                    <Rectangle
                        Grid.Row="0"
                        Grid.Column="2">
                        <Rectangle.Background>
                            <LinearGradientBrush
                                StartPoint="1,1"
                                EndPoint="0,1">
                                <GradientStop
                                    Color="Transparent"
                                    Offset="0.7" />
                                <GradientStop
                                    Color="{AppThemeBinding Light=White, Dark=Black}"
                                    Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Background>
                    </Rectangle>
                </Grid>
                <Rectangle
                    Fill="LightGray"
                    HeightRequest="2"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </DataTemplate>
        <DataTemplate
            x:Key="RecipeStepTemplate"
            x:DataType="viewModels:StepViewModel">
            <VerticalStackLayout>
                <Grid
                    RowDefinitions="10,100,10"
                    ColumnDefinitions="10,80,*">
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Source="{Binding ImageUri}"
                        Aspect="AspectFill" />
                    <Ellipse
                        Grid.Row="1"
                        Grid.Column="1"
                        Fill="{DynamicResource Tertiary}"
                        WidthRequest="80"
                        HeightRequest="80"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding StepNumber}"
                        FontSize="30" />
                </Grid>
                <Label
                    Margin="20"
                    FontSize="18"
                    Text="{Binding Description}" />
                <!--<Label
                    Margin="10"
                    Text="Ingredients for this step:" />
                <CollectionView
                    ItemsSource="{Binding Ingredients}"
                    ItemsLayout="VerticalList"
                    ItemTemplate="{StaticResource RecipeIngredientTemplate}" />-->
            </VerticalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">

            <!-- Recipe Image Carousel Container -->
            <Grid
                x:Name="ImageCarouselContainer"
                HeightRequest="220">
                <CarouselView
                    x:Name="ImageCarousel"
                    ItemsSource="{Binding ImageUrls}"
                    ItemTemplate="{StaticResource RecipeImageTemplate}"
                    IndicatorView="ImageIndicator"
                    Position="0"
                    PeekAreaInsets="0"
                    Loop="False"
                    HorizontalScrollBarVisibility="Never"
                    IsSwipeEnabled="True" />

                <!-- Dot Indicators -->
                <IndicatorView
                    x:Name="ImageIndicator"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10"
                    IndicatorColor="{StaticResource Gray400}"
                    SelectedIndicatorColor="{StaticResource Tertiary}"
                    IndicatorSize="8"
                    InputTransparent="True">
                    <IndicatorView.Triggers>
                        <DataTrigger
                            TargetType="IndicatorView"
                            Binding="{Binding ImageUrls.Count}"
                            Value="1">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                        <DataTrigger
                            TargetType="IndicatorView"
                            Binding="{Binding ImageUrls.Count}"
                            Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </IndicatorView.Triggers>
                </IndicatorView>
            </Grid>
                <!-- Author and Servings Row -->
                <Grid
                    Margin="20,10,20,0"
                    ColumnDefinitions="Auto,Auto,*,Auto">
                    <!-- Author Image (Left) -->
                    <Border
                        Grid.Column="0"
                        StrokeThickness="0"
                        HeightRequest="50"
                        WidthRequest="50"
                        VerticalOptions="Center"
                        Margin="0,0,10,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25" />
                        </Border.StrokeShape>
                        <Border.Triggers>
                            <DataTrigger
                                TargetType="Border"
                                Binding="{Binding UserProfile.ProfileImageUri, Converter={StaticResource NullToBooleanConverter}}"
                                Value="True">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Border.Triggers>
                        <Image
                            Source="{Binding UserProfile.ProfileImageUri}"
                            Aspect="AspectFill"
                            HeightRequest="50"
                            WidthRequest="50"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" />
                    </Border>
                    <!-- Author Name and Location (Left) -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        VerticalOptions="Center"
                        Spacing="2">
                        <Label
                            Text="{Binding UserProfile.FirstName}"
                            FontSize="18"
                            FontAttributes="Bold"
                            LineBreakMode="TailTruncation" />
                        <Label
                            Text="{Binding Url.Host}"
                            FontSize="14"
                            TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                            LineBreakMode="TailTruncation">
                            <Label.Triggers>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding Url, Converter={StaticResource NullToBooleanConverter}}"
                                    Value="True">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                    <!-- Servings (Right) -->
                    <HorizontalStackLayout
                        Grid.Column="3"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        Spacing="5">
                        <Label
                            Text="Servings:"
                            VerticalTextAlignment="Center"
                            FontSize="16" />
                        <Picker
                            x:Name="ServingsPicker"
                            SelectedItem="{Binding Servings, StringFormat='{0}'}"
                            SelectedIndexChanged="ServingsPicker_SelectedIndexChanged"
                            WidthRequest="30"
                            IsEnabled="True"
                            BackgroundColor="Transparent"
                            FontSize="16">
                            <Picker.Items>
                                <x:String>1</x:String>
                                <x:String>2</x:String>
                                <x:String>3</x:String>
                                <x:String>4</x:String>
                                <x:String>5</x:String>
                                <x:String>6</x:String>
                                <x:String>7</x:String>
                                <x:String>8</x:String>
                                <x:String>9</x:String>
                                <x:String>10</x:String>
                                <x:String>12</x:String>
                                <x:String>15</x:String>
                                <x:String>20</x:String>
                                <x:String>25</x:String>
                                <x:String>30</x:String>
                                <x:String>40</x:String>
                                <x:String>50</x:String>
                            </Picker.Items>
                        </Picker>
                    </HorizontalStackLayout>
                </Grid>
                <!-- Time, Calories, and Rating Row -->
                <Border
                    MinimumHeightRequest="80"
                    HorizontalOptions="Fill"
                    Margin="0,10,0,0"
                    Stroke="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    StrokeThickness="0">
                    <Grid
                        Margin="20,10"
                        RowDefinitions="Auto,Auto"
                        ColumnDefinitions="Auto,*,Auto">
                        <!-- Timer Icon (Left, centered vertically) -->
                        <Image
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Source="timer"
                            HeightRequest="24"
                            WidthRequest="24"
                            VerticalOptions="Center"
                            Margin="0,0,10,0"
                            Aspect="AspectFit" />
                        <!-- Prep Time (Top Left) -->
                        <HorizontalStackLayout
                            Grid.Row="0"
                            Grid.Column="1"
                            Spacing="5"
                            VerticalOptions="Center">
                            <HorizontalStackLayout.Triggers>
                                <DataTrigger
                                    TargetType="HorizontalStackLayout"
                                    Binding="{Binding PrepTime}"
                                    Value="{x:Null}">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </HorizontalStackLayout.Triggers>
                            <Label
                                Text="Prep:"
                                VerticalOptions="Center"
                                FontSize="16"
                                FontAttributes="Bold" />
                            <Label
                                Text="{Binding PrepTime, Converter={StaticResource TimeSpanToStringConverter}}"
                                VerticalOptions="Center"
                                FontSize="16" />
                        </HorizontalStackLayout>
                        <!-- Cook Time (Bottom Left) -->
                        <HorizontalStackLayout
                            Grid.Row="1"
                            Grid.Column="1"
                            Spacing="5"
                            VerticalOptions="Center">
                            <HorizontalStackLayout.Triggers>
                                <DataTrigger
                                    TargetType="HorizontalStackLayout"
                                    Binding="{Binding CookTime}"
                                    Value="{x:Null}">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </HorizontalStackLayout.Triggers>
                            <Label
                                Text="Cook:"
                                VerticalOptions="Center"
                                FontSize="16"
                                FontAttributes="Bold" />
                            <Label
                                Text="{Binding CookTime, Converter={StaticResource TimeSpanToStringConverter}}"
                                VerticalOptions="Center"
                                FontSize="16" />
                        </HorizontalStackLayout>
                        <!-- Calories (Top Right) -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            FontSize="16"
                            TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}">
                            <Label.Text>
                                <MultiBinding StringFormat="{}~{0} cal">
                                    <Binding Path="PreviewCalories"></Binding>
                                </MultiBinding>
                            </Label.Text>
                            <Label.Triggers>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding PreviewCalories, Converter={StaticResource NullToBooleanConverter}}"
                                    Value="True">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding PreviewCalories}"
                                    Value="">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                        <!-- Rating placeholder (Bottom Right) - can be added later -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="â­ 4.5"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            FontSize="16"
                            IsVisible="False" />
                    </Grid>
                </Border>
                <!-- Description -->
                <Border
                    MinimumHeightRequest="50"
                    HorizontalOptions="Fill"
                    Stroke="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    StrokeThickness="0">
                    <Label
                        Margin="20,10"
                        Text="{Binding Description}"
                        FontSize="16" />
                </Border>
                <toolkit:Expander
                    IsExpanded="True">
                    <toolkit:Expander.Header>
                        <Border
                            Padding="10"
                            Margin="-3,0">
                            <HorizontalStackLayout>
                                <Image
                                    Source="arrow_down"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    Margin="5,0,10,0">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </Image.Behaviors>
                                </Image>
                                <Label
                                    Text="Ingredients"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </toolkit:Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding RecipeIngredients}"
                        ItemsLayout="VerticalList"
                        ItemTemplate="{StaticResource RecipeIngredientTemplate}" />
                </toolkit:Expander>
                <toolkit:Expander
                    IsVisible="{Binding HasPrep}"
                    Margin="0,15,0,0"
                    IsExpanded="True"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">
                    <toolkit:Expander.Header>
                        <Border
                            Padding="10"
                            Margin="-3,0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <HorizontalStackLayout>
                                <Image
                                    Source="arrow_down"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    Margin="5,0,10,0">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </Image.Behaviors>
                                </Image>
                                <Label
                                    Text="Prep"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </toolkit:Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding PrepSteps}"
                        ItemsLayout="VerticalList"
                        ItemTemplate="{StaticResource RecipeStepTemplate}" />
                </toolkit:Expander>
                <toolkit:Expander
                    Margin="0,15,0,0"
                    IsExpanded="True"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                    <toolkit:Expander.Header>
                        <Border
                            Padding="10"
                            Margin="-3,0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <HorizontalStackLayout>
                                <Image
                                    Source="arrow_down"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    Margin="5,0,10,0">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </Image.Behaviors>
                                </Image>
                                <Label
                                    Text="Cook"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </toolkit:Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding CookingSteps}"
                        ItemsLayout="VerticalList"
                        ItemTemplate="{StaticResource RecipeStepTemplate}" />
                </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
