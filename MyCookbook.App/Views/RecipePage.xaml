<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="using:MyCookbook.App.Views"
    xmlns:viewModels="clr-namespace:MyCookbook.App.ViewModels"
    xmlns:converters="clr-namespace:MyCookbook.App.Converters"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    x:Class="MyCookbook.App.Views.RecipePage"
    x:DataType="viewModels:RecipeViewModel"
    x:Name="Root"
    Shell.NavBarIsVisible="True"
    Shell.PresentationMode="Animated"
    Title="{Binding Name}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Share"
            IconImageSource="share"
            Command="{Binding ShareCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <converters:IngredientToStringConverter x:Key="IngredientToStringConverter" />
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        <DataTemplate
            x:Key="RecipeImageTemplate"
            x:DataType="system:Uri">
            <Image
                Source="{Binding .}"
                Aspect="AspectFill"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />
        </DataTemplate>
        <DataTemplate
            x:Key="RecipeIngredientTemplate"
            x:DataType="viewModels:RecipeIngredientViewModel">
            <VerticalStackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource HeightMedium}" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="{StaticResource WidthXLarge}" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalOptions="Fill"
                        VerticalTextAlignment="Center"
                        Padding="{StaticResource MarginLeftXLarge}"
                        FontSize="{StaticResource FontSizeTitle}">
                        <Label.Text>
                            <MultiBinding Converter="{StaticResource IngredientToStringConverter}">
                                <Binding Path="." />
                                <Binding
                                    Path="BindingContext.ServingsMultiplier"
                                    Source="{x:Reference Root}" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Image
                        Grid.Row="0"
                        Grid.Column="2"
                        Source="{Binding ImageUri, TargetNullValue=carrot}"
                        Aspect="AspectFill"
                        HeightRequest="{StaticResource HeightMedium}"
                        WidthRequest="{StaticResource WidthXLarge}" />
                    <Rectangle
                        Grid.Row="0"
                        Grid.Column="2">
                        <Rectangle.Background>
                            <LinearGradientBrush
                                StartPoint="1,1"
                                EndPoint="0,1">
                                <GradientStop
                                    Color="Transparent"
                                    Offset="0.7" />
                                <GradientStop
                                    Color="{AppThemeBinding Light=White, Dark=Black}"
                                    Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Background>
                    </Rectangle>
                </Grid>
                <Rectangle
                    Fill="{AppThemeBinding Light={StaticResource SeparatorColorLight}, Dark={StaticResource SeparatorColorDark}}"
                    HeightRequest="{StaticResource BorderThicknessMedium}"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </DataTemplate>
        <DataTemplate
            x:Key="RecipeStepTemplate"
            x:DataType="viewModels:StepViewModel">
            <VerticalStackLayout
                Spacing="{StaticResource SpacingMedium}"
                Margin="{StaticResource MarginVerticalMedium}">
                <!-- Step Number and Instructions -->
                <Grid Margin="{StaticResource MarginHorizontalXLarge}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{StaticResource HeightMedium}" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Step Number Circle -->
                    <Ellipse
                        Grid.Column="0"
                        Fill="{DynamicResource Tertiary}"
                        WidthRequest="{StaticResource HeightMedium}"
                        HeightRequest="{StaticResource HeightMedium}"
                        HorizontalOptions="Start"
                        VerticalOptions="Start" />
                    <Label
                        Grid.Column="0"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding StepNumber}"
                        FontSize="{StaticResource FontSizeHeading}"
                        FontAttributes="Bold"
                        WidthRequest="{StaticResource HeightMedium}"
                        HeightRequest="{StaticResource HeightMedium}"
                        VerticalOptions="Start"
                        HorizontalOptions="Start" />
                    <!-- Instructions Text -->
                    <Label
                        Grid.Column="1"
                        FontSize="{StaticResource FontSizeTitleLarge}"
                        Text="{Binding Description}"
                        Margin="{StaticResource MarginHorizontalMedium}"
                        VerticalOptions="Start" />
                </Grid>
                <!-- Step Image (Full Width) -->
                <Image
                    Source="{Binding ImageUri}"
                    Aspect="AspectFill"
                    HeightRequest="{StaticResource HeightImage}"
                    Margin="{StaticResource MarginHorizontalXLarge}"
                    HorizontalOptions="Fill">
                    <Image.Triggers>
                        <DataTrigger
                            TargetType="Image"
                            Binding="{Binding ImageUri, Converter={StaticResource NullToBooleanConverter}}"
                            Value="True">
                            <Setter Property="IsVisible" Value="False" />
                            <Setter Property="HeightRequest" Value="0" />
                            <Setter Property="Margin" Value="0" />
                        </DataTrigger>
                    </Image.Triggers>
                </Image>
            </VerticalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">

            <!-- Recipe Image Carousel Container -->
            <Grid
                x:Name="ImageCarouselContainer"
                HeightRequest="{StaticResource HeightImageCarousel}">
                <CarouselView
                    x:Name="ImageCarousel"
                    ItemsSource="{Binding ImageUrls}"
                    ItemTemplate="{StaticResource RecipeImageTemplate}"
                    IndicatorView="ImageIndicator"
                    Position="0"
                    PeekAreaInsets="0"
                    Loop="False"
                    HorizontalScrollBarVisibility="Never"
                    IsSwipeEnabled="True" />

                <!-- Dot Indicators -->
                <IndicatorView
                    x:Name="ImageIndicator"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Margin="{StaticResource MarginBottomMedium}"
                    IndicatorColor="{StaticResource Gray400}"
                    SelectedIndicatorColor="{StaticResource Tertiary}"
                    IndicatorSize="8"
                    InputTransparent="True">
                    <IndicatorView.Triggers>
                        <DataTrigger
                            TargetType="IndicatorView"
                            Binding="{Binding ImageUrls.Count}"
                            Value="1">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                        <DataTrigger
                            TargetType="IndicatorView"
                            Binding="{Binding ImageUrls.Count}"
                            Value="0">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </IndicatorView.Triggers>
                </IndicatorView>
            </Grid>
                <!-- Author and Servings Row -->
                <Grid Margin="{StaticResource MarginStandardTop}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Author Image (Left) -->
                    <Border
                        Grid.Column="0"
                        StrokeThickness="{StaticResource BorderThicknessNone}"
                        HeightRequest="{StaticResource HeightMedium}"
                        WidthRequest="{StaticResource HeightMedium}"
                        Margin="{StaticResource MarginRightMedium}"
                        VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25" />
                        </Border.StrokeShape>
                        <Border.Triggers>
                            <DataTrigger
                                TargetType="Border"
                                Binding="{Binding UserProfile.ProfileImageUri, Converter={StaticResource NullToBooleanConverter}}"
                                Value="True">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Border.Triggers>
                        <Image
                            Source="{Binding UserProfile.ProfileImageUri}"
                            Aspect="AspectFill"
                            HeightRequest="{StaticResource HeightMedium}"
                            WidthRequest="{StaticResource HeightMedium}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceColorLight}, Dark={StaticResource SurfaceColorDark}}" />
                    </Border>
                    <!-- Author Name and Location (Left) -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        VerticalOptions="Center"
                        Spacing="{StaticResource SpacingXSmall}">
                        <Label
                            Text="{Binding UserProfile.FirstName}"
                            FontSize="{StaticResource FontSizeTitleLarge}"
                            FontAttributes="Bold"
                            LineBreakMode="TailTruncation" />
                        <Label
                            Text="{Binding Url.Host}"
                            FontSize="{StaticResource FontSizeSubtitle}"
                            TextColor="{AppThemeBinding Light={StaticResource TextSecondaryColorLight}, Dark={StaticResource TextSecondaryColorDark}}"
                            LineBreakMode="TailTruncation">
                            <Label.Triggers>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding Url, Converter={StaticResource NullToBooleanConverter}}"
                                    Value="True">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                    <!-- Servings and Calories (Right) -->
                    <VerticalStackLayout
                        Grid.Column="3"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        Spacing="2">
                        <HorizontalStackLayout
                            HorizontalOptions="End"
                            Spacing="5">
                            <Label
                                Text="Servings:"
                                VerticalTextAlignment="Center"
                                FontSize="18" />
                            <Picker
                                x:Name="ServingsPicker"
                                SelectedItem="{Binding Servings, StringFormat='{0}'}"
                                SelectedIndexChanged="ServingsPicker_SelectedIndexChanged"
                                WidthRequest="30"
                                IsEnabled="True"
                                BackgroundColor="Transparent"
                                FontSize="18">
                                <Picker.Items>
                                    <x:String>1</x:String>
                                    <x:String>2</x:String>
                                    <x:String>3</x:String>
                                    <x:String>4</x:String>
                                    <x:String>5</x:String>
                                    <x:String>6</x:String>
                                    <x:String>7</x:String>
                                    <x:String>8</x:String>
                                    <x:String>9</x:String>
                                    <x:String>10</x:String>
                                    <x:String>12</x:String>
                                    <x:String>15</x:String>
                                    <x:String>20</x:String>
                                    <x:String>25</x:String>
                                    <x:String>30</x:String>
                                    <x:String>40</x:String>
                                    <x:String>50</x:String>
                                </Picker.Items>
                            </Picker>
                        </HorizontalStackLayout>
                        <Label
                            HorizontalOptions="End"
                            FontSize="16"
                            TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}">
                            <Label.Text>
                                <MultiBinding StringFormat="{}~{0} cal">
                                    <Binding Path="PreviewCalories"></Binding>
                                </MultiBinding>
                            </Label.Text>
                            <Label.Triggers>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding PreviewCalories, Converter={StaticResource NullToBooleanConverter}}"
                                    Value="True">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding PreviewCalories}"
                                    Value="">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                </Grid>
                <!-- Time, Hearts, and Rating Row -->
                <Border
                    MinimumHeightRequest="70"
                    HorizontalOptions="Fill"
                    Margin="{StaticResource MarginTopSmall}"
                    Stroke="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    StrokeThickness="0">
                    <Grid
                        Margin="{StaticResource MarginCompact}"
                        RowDefinitions="Auto,Auto"
                        ColumnDefinitions="Auto,*,Auto">
                        <!-- Timer Icon (Left, centered vertically) -->
                        <Image
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Source="timer"
                            HeightRequest="24"
                            WidthRequest="24"
                            VerticalOptions="Center"
                            Margin="{StaticResource MarginIconRight}"
                            Aspect="AspectFit" />
                        <!-- Prep Time (Top Left) -->
                        <HorizontalStackLayout
                            Grid.Row="0"
                            Grid.Column="1"
                            Spacing="5"
                            VerticalOptions="Center">
                            <HorizontalStackLayout.Triggers>
                                <DataTrigger
                                    TargetType="HorizontalStackLayout"
                                    Binding="{Binding PrepTime}"
                                    Value="{x:Null}">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </HorizontalStackLayout.Triggers>
                            <Label
                                Text="Prep:"
                                VerticalOptions="Center"
                                FontSize="18"
                                FontAttributes="Bold" />
                            <Label
                                Text="{Binding PrepTime, Converter={StaticResource TimeSpanToStringConverter}}"
                                VerticalOptions="Center"
                                FontSize="18" />
                        </HorizontalStackLayout>
                        <!-- Cook Time (Bottom Left) -->
                        <HorizontalStackLayout
                            Grid.Row="1"
                            Grid.Column="1"
                            Spacing="5"
                            VerticalOptions="Center">
                            <HorizontalStackLayout.Triggers>
                                <DataTrigger
                                    TargetType="HorizontalStackLayout"
                                    Binding="{Binding CookTime}"
                                    Value="{x:Null}">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </HorizontalStackLayout.Triggers>
                            <Label
                                Text="Cook:"
                                VerticalOptions="Center"
                                FontSize="18"
                                FontAttributes="Bold" />
                            <Label
                                Text="{Binding CookTime, Converter={StaticResource TimeSpanToStringConverter}}"
                                VerticalOptions="Center"
                                FontSize="18" />
                        </HorizontalStackLayout>
                        <!-- Hearts (Top Right) -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            FontSize="18">
                            <Label.Text>
                                <MultiBinding StringFormat="{}❤️ {0}">
                                    <Binding Path="RecipeHearts"></Binding>
                                </MultiBinding>
                            </Label.Text>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding HeartRecipeCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <!-- Rating (Bottom Right) -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="2"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            FontSize="18">
                            <Label.Text>
                                <MultiBinding StringFormat="{}⭐ {0:F1}">
                                    <Binding Path="Rating"></Binding>
                                </MultiBinding>
                            </Label.Text>
                            <Label.Triggers>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding Rating, Converter={StaticResource NullToBooleanConverter}}"
                                    Value="True">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </Grid>
                </Border>
                <!-- Description -->
                <Border
                    MinimumHeightRequest="50"
                    HorizontalOptions="Fill"
                    Margin="{StaticResource MarginTopSmall}"
                    Stroke="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    StrokeThickness="0">
                    <Grid>
                        <Label
                            Margin="{StaticResource MarginStandard}"
                            Text="{Binding Description}"
                            FontSize="18"
                            IsVisible="{Binding IsNotBusy}" />
                        <ActivityIndicator
                            IsRunning="{Binding IsBusy}"
                            IsVisible="{Binding IsBusy}"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Margin="{StaticResource MarginStandard}"
                            Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
                    </Grid>
                </Border>
                <toolkit:Expander
                    IsExpanded="True">
                    <toolkit:Expander.Header>
                        <Border
                            Padding="{StaticResource PaddingMedium}"
                            Margin="{StaticResource MarginNegativeSmall}">
                            <HorizontalStackLayout>
                                <Image
                                    Source="arrow_down"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    Margin="{StaticResource MarginIcon}">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </Image.Behaviors>
                                </Image>
                                <Label
                                    Text="Ingredients"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </toolkit:Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding RecipeIngredients}"
                        ItemsLayout="VerticalList"
                        ItemTemplate="{StaticResource RecipeIngredientTemplate}">
                        <CollectionView.EmptyView>
                            <Grid
                                MinimumHeightRequest="100"
                                Padding="{StaticResource PaddingLarge}">
                                <ActivityIndicator
                                    IsRunning="{Binding IsBusy}"
                                    IsVisible="{Binding IsBusy}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
                            </Grid>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </toolkit:Expander>
                <toolkit:Expander
                    IsVisible="{Binding HasPrep}"
                    Margin="{StaticResource MarginVerticalLarge}"
                    IsExpanded="True"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">
                    <toolkit:Expander.Header>
                        <Border
                            Padding="{StaticResource PaddingMedium}"
                            Margin="{StaticResource MarginNegativeSmall}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <HorizontalStackLayout>
                                <Image
                                    Source="arrow_down"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    Margin="{StaticResource MarginIcon}">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </Image.Behaviors>
                                </Image>
                                <Label
                                    Text="Prep"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </toolkit:Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding PrepSteps}"
                        ItemsLayout="VerticalList"
                        ItemTemplate="{StaticResource RecipeStepTemplate}">
                        <CollectionView.EmptyView>
                            <Grid
                                MinimumHeightRequest="100"
                                Padding="{StaticResource PaddingLarge}">
                                <ActivityIndicator
                                    IsRunning="{Binding IsBusy}"
                                    IsVisible="{Binding IsBusy}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
                            </Grid>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </toolkit:Expander>
                <toolkit:Expander
                    Margin="{StaticResource MarginVerticalLarge}"
                    IsExpanded="True"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                    <toolkit:Expander.Header>
                        <Border
                            Padding="{StaticResource PaddingMedium}"
                            Margin="{StaticResource MarginNegativeSmall}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <HorizontalStackLayout>
                                <Image
                                    Source="arrow_down"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    Margin="{StaticResource MarginIcon}">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    </Image.Behaviors>
                                </Image>
                                <Label
                                    Text="Cook"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </toolkit:Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding CookingSteps}"
                        ItemsLayout="VerticalList"
                        ItemTemplate="{StaticResource RecipeStepTemplate}">
                        <CollectionView.EmptyView>
                            <Grid
                                MinimumHeightRequest="100"
                                Padding="{StaticResource PaddingLarge}">
                                <ActivityIndicator
                                    IsRunning="{Binding IsBusy}"
                                    IsVisible="{Binding IsBusy}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
                            </Grid>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>
